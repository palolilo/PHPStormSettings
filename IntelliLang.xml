<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="HTML" injector-id="xml">
      <display-name>meta/@http-equiv</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("http-equiv")).withParent(xmlTag().withLocalName(string().equalTo("meta")).withNamespace(string().equalTo("http://www.w3.org/1999/html")))]]></place>
    </injection>
  </component>
</application>